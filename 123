    <script>
        // Инициализация EmailJS
        (function() {
            emailjs.init("M5B6PFXrTANINI1yc"); // Замените на ваш публичный ключ из EmailJS
        })();
        
        // Функция показа уведомлений
        function showNotification(message, type = 'success') {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            notification.className = `notification ${type} show`;
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 5000);
        }
        
        // Мобильное меню
        const menuToggle = document.getElementById('menuToggle');
        const navMenu = document.getElementById('navMenu');
        
        menuToggle.addEventListener('click', function() {
            navMenu.classList.toggle('show');
            menuToggle.classList.toggle('active');
        });
        
        // Плавная прокрутка к якорям
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;
                
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                    
                    // Закрытие меню на мобильных устройствах после клика
                    if (navMenu.classList.contains('show')) {
                        navMenu.classList.remove('show');
                        menuToggle.classList.remove('active');
                    }
                }
            });
        });
        
        // Валидация формы
        function validateForm() {
            let isValid = true;
            
            // Валидация имени
            const name = document.getElementById('name');
            const nameError = document.getElementById('nameError');
            if (name.value.trim() === '') {
                name.parentElement.classList.add('error');
                nameError.style.display = 'block';
                isValid = false;
            } else {
                name.parentElement.classList.remove('error');
                name.parentElement.classList.add('success');
                nameError.style.display = 'none';
            }
            
            // Валидация телефона
            const phone = document.getElementById('phone');
            const phoneError = document.getElementById('phoneError');
            const phoneRegex = /^(\+7|7|8)?[\s\-]?\(?[489][0-9]{2}\)?[\s\-]?[0-9]{3}[\s\-]?[0-9]{2}[\s\-]?[0-9]{2}$/;
            if (!phoneRegex.test(phone.value.replace(/\s/g, ''))) {
                phone.parentElement.classList.add('error');
                phoneError.style.display = 'block';
                isValid = false;
            } else {
                phone.parentElement.classList.remove('error');
                phone.parentElement.classList.add('success');
                phoneError.style.display = 'none';
            }
            
            // Валидация email
            const email = document.getElementById('email');
            const emailError = document.getElementById('emailError');
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email.value)) {
                email.parentElement.classList.add('error');
                emailError.style.display = 'block';
                isValid = false;
            } else {
                email.parentElement.classList.remove('error');
                email.parentElement.classList.add('success');
                emailError.style.display = 'none';
            }
            
            return isValid;
        }
        
        // Обработка формы заказа
        const orderForm = document.getElementById('orderForm');
        const submitBtn = document.getElementById('submitBtn');
        const loadingIndicator = document.getElementById('loadingIndicator');
        
        orderForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            if (!validateForm()) {
                showNotification('Пожалуйста, исправьте ошибки в форме.', 'error');
                return;
            }
            
            // Показать индикатор загрузки
            submitBtn.style.display = 'none';
            loadingIndicator.style.display = 'block';
            
            // Сбор данных формы
            const formData = {
                name: document.getElementById('name').value,
                phone: document.getElementById('phone').value,
                email: document.getElementById('email').value,
                size: document.getElementById('size').value,
                style: document.getElementById('style').value,
                budget: document.getElementById('budget').value,
                message: document.getElementById('message').value,
                date: new Date().toLocaleString('ru-RU')
            };
            
            // Отправка email через EmailJS
            emailjs.send('service_avav8z8', 'tamplate_6iamv0p', formData) // Замените на ваши ID
                .then(function(response) {
                    console.log('SUCCESS!', response.status, response.text);
                    showNotification('Заявка успешно отправлена! Мы свяжемся с вами в ближайшее время.', 'success');
                    orderForm.reset();
                    
                    // Сброс стилей формы
                    document.querySelectorAll('.form-group').forEach(group => {
                        group.classList.remove('success');
                    });
                }, function(error) {
                    console.log('FAILED...', error);
                    showNotification('Произошла ошибка при отправке заявки. Пожалуйста, попробуйте еще раз или свяжитесь с нами по телефону.', 'error');
                })
                .finally(function() {
                    // Скрыть индикатор загрузки
                    submitBtn.style.display = 'inline-block';
                    loadingIndicator.style.display = 'none';
                });
        });
        
        // Работа с модальным окном оплаты
        const modal = document.getElementById('paymentModal');
        const closeModal = document.querySelector('.close-modal');
        const buyButtons = document.querySelectorAll('.buy-btn');
        const productName = document.getElementById('productName');
        const productPrice = document.getElementById('productPrice');
        const totalPrice = document.getElementById('totalPrice');
        const payAmount = document.getElementById('payAmount');
        const paymentMethods = document.querySelectorAll('.payment-method');
        const payButton = document.getElementById('payButton');
        
        // Открытие модального окна при нажатии на кнопку "Купить"
        buyButtons.forEach(button => {
            button.addEventListener('click', function() {
                const product = this.getAttribute('data-product');
                const price = this.getAttribute('data-price');
                
                productName.textContent = product;
                productPrice.textContent = price;
                totalPrice.textContent = price;
                payAmount.textContent = price;
                
                modal.style.display = 'flex';
            });
        });
        
        // Закрытие модального окна
        closeModal.addEventListener('click', function() {
            modal.style.display = 'none';
        });
        
        // Закрытие модального окна при клике вне его
        window.addEventListener('click', function(e) {
            if (e.target === modal) {
                modal.style.display = 'none';
            }
        });
        
        // Выбор способа оплаты
        paymentMethods.forEach(method => {
            method.addEventListener('click', function() {
                paymentMethods.forEach(m => m.classList.remove('active'));
                this.classList.add('active');
            });
        });
        
        // Валидация платежной формы
        function validatePaymentForm() {
            let isValid = true;
            
            // Валидация номера карты
            const cardNumber = document.getElementById('cardNumber');
            const cardNumberError = document.getElementById('cardNumberError');
            if (cardNumber.value.replace(/\s/g, '').length !== 16) {
                cardNumber.parentElement.classList.add('error');
                cardNumberError.style.display = 'block';
                isValid = false;
            } else {
                cardNumber.parentElement.classList.remove('error');
                cardNumberError.style.display = 'none';
            }
            
            // Валидация срока действия
            const cardExpiry = document.getElementById('cardExpiry');
            const cardExpiryError = document.getElementById('cardExpiryError');
            const expiryRegex = /^(0[1-9]|1[0-2])\/?([0-9]{2})$/;
            if (!expiryRegex.test(cardExpiry.value)) {
                cardExpiry.parentElement.classList.add('error');
                cardExpiryError.style.display = 'block';
                isValid = false;
            } else {
                cardExpiry.parentElement.classList.remove('error');
                cardExpiryError.style.display = 'none';
            }
            
            // Валидация CVC/CVV
            const cardCvc = document.getElementById('cardCvc');
            const cardCvcError = document.getElementById('cardCvcError');
            if (cardCvc.value.length !== 3 || isNaN(cardCvc.value)) {
                cardCvc.parentElement.classList.add('error');
                cardCvcError.style.display = 'block';
                isValid = false;
            } else {
                cardCvc.parentElement.classList.remove('error');
                cardCvcError.style.display = 'none';
            }
            
            // Валидация имени владельца
            const cardHolder = document.getElementById('cardHolder');
            const cardHolderError = document.getElementById('cardHolderError');
            if (cardHolder.value.trim() === '') {
                cardHolder.parentElement.classList.add('error');
                cardHolderError.style.display = 'block';
                isValid = false;
            } else {
                cardHolder.parentElement.classList.remove('error');
                cardHolderError.style.display = 'none';
            }
            
            return isValid;
        }
        
        // Обработка оплаты
        payButton.addEventListener('click', function() {
            if (!validatePaymentForm()) {
                showNotification('Пожалуйста, исправьте ошибки в форме оплаты.', 'error');
                return;
            }
            
            // Эмуляция процесса оплаты
            payButton.textContent = 'Обработка...';
            payButton.disabled = true;
            
            setTimeout(function() {
                modal.style.display = 'none';
                showNotification('Оплата прошла успешно! Спасибо за ваш заказ. Мы свяжемся с вами для уточнения деталей.', 'success');
                payButton.textContent = 'Оплатить ' + payAmount.textContent + ' руб.';
                payButton.disabled = false;
                
                // Очистка формы
                document.getElementById('cardNumber').value = '';
                document.getElementById('cardExpiry').value = '';
                document.getElementById('cardCvc').value = '';
                document.getElementById('cardHolder').value = '';
                
                // Отправка email о покупке
                const purchaseData = {
                    product: productName.textContent,
                    price: productPrice.textContent,
                    date: new Date().toLocaleString('ru-RU')
                };
                
                emailjs.send('service_avav8z8', 'tamplate_t21b35i', purchaseData)
                    .then(function(response) {
                        console.log('Purchase email sent!', response.status, response.text);
                    }, function(error) {
                        console.log('Failed to send purchase email...', error);
                    });
            }, 2000);
        });
        
        // Форматирование ввода номера карты
        document.getElementById('cardNumber').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s+/g, '').replace(/[^0-9]/gi, '');
            let formattedValue = '';
            
            for (let i = 0; i < value.length; i++) {
                if (i > 0 && i % 4 === 0) {
                    formattedValue += ' ';
                }
                formattedValue += value[i];
            }
            
            e.target.value = formattedValue;
        });
        
        // Форматирование ввода срока действия карты
        document.getElementById('cardExpiry').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s+/g, '').replace(/[^0-9]/gi, '');
            let formattedValue = '';
            
            for (let i = 0; i < value.length; i++) {
                if (i === 2) {
                    formattedValue += '/';
                }
                formattedValue += value[i];
            }
            
            e.target.value = formattedValue;
        });
    </script>
</body>
</html>
